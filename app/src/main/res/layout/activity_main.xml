<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="roshaan.mytodoapp.MainActivity"
  >

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:background="@drawable/border"
        android:padding="@dimen/recyclerViewPadding"


        android:id="@+id/recyclerView"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.65"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/LinearLayoutMarginTop"
       >

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/newTask"
            android:inputType="text"
            android:backgroundTint="#2087D7"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/addButton"
            android:id="@+id/addButton"
            android:onClick="addData"/>
    </LinearLayout>

</LinearLayout>
